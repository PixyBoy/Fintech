# ==== General ====
TZ=Europe/Paris
APP_ENV=local

# ==== Images / Tags ====
MYSQL_IMAGE=mysql:8.0
REDIS_IMAGE=redis:7-alpine
PHPMYADMIN_IMAGE=phpmyadmin/phpmyadmin
PHP_IMAGE=laravel-php:8.4

# ==== Container Names (optional) ====
MYSQL_CONTAINER_NAME=mysql
PHPMYADMIN_CONTAINER_NAME=phpmyadmin
REDIS_CONTAINER_NAME=redis
PHPFPM_CONTAINER_NAME=php-fpm
APACHE_CONTAINER_NAME=apache
HORIZON_CONTAINER_NAME=horizon

# ==== Ports (host:container) ====
APACHE_PORT=8081
PHPMYADMIN_PORT=8080
MYSQL_PORT=3307
REDIS_PORT=6379

# ==== Build Args / User Mapping ====
PUID=1000
PGID=1000

# ==== Volume Names ====
MYSQL_DATA_VOLUME=mysql-data
REDIS_DATA_VOLUME=redis-data
VENDOR_VOLUME=vendor
STORAGE_VOLUME=storage
COMPOSER_CACHE_VOLUME=composer-cache

# ==== MySQL ====
MYSQL_ROOT_USER=root
MYSQL_ROOT_PASSWORD=root
MYSQL_DATABASE=laravel
MYSQL_USER=laravel
MYSQL_PASSWORD=laravel
MYSQL_HOST=mysql

# ==== Redis ====
REDIS_HOST=redis
REDIS_PORT=6379

# ==== Apache VHost (path inside repo) ====
APACHE_VHOST_CONF=./docker/apache/vhost.conf

# ==== Laravel (optionally passed to containers; منبع اصلی src/.env است) ====
QUEUE_CONNECTION=redis
